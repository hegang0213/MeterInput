<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/textColor</item>

        <item name="android:alertDialogStyle">@style/appAlertDialogStyle</item>
        <item name="buttonStyle">@style/appButtonStyle</item>
        <item name="editTextStyle">@style/appEditTextStyle</item>
        <item name="android:spinnerItemStyle">@style/appSpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/appSpinnerDropDownItemStyle</item>
        <item name="android:listViewStyle">@style/appListViewStyle</item>
    </style>

    <style name="accentTextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="appAlertDialogStyle" parent="AlertDialog.AppCompat">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="appTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="appButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/blue_button_foreground</item>
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="fullDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/windowBackgroundMask</item>

        <item name="buttonStyle">@style/appButtonStyle</item>
        <item name="editTextStyle">@style/appEditTextStyle</item>
        <item name="android:spinnerItemStyle">@style/appSpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/appSpinnerDropDownItemStyle</item>
        <item name="android:listViewStyle">@style/appListViewStyle</item>
    </style>

    <style name="textItemStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">#E9E9E9</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textClickableItemStyle" parent="textItemStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@drawable/text_clickable_item_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="appListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:divider">@color/listViewDividerColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="appSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="appSpinnerDropDownItemStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="appEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fakeBaseColumnStyle">
        <item name="android:background">@color/columnBackground</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="fakeColumn1Style" parent="fakeBaseColumnStyle">
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="fakeColumn2Style" parent="fakeBaseColumnStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fakeColumn3Style" parent="fakeBaseColumnStyle">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
