<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:layout_margin="10dp"
        android:background="@color/customerBillCardBackground"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">
    <TableRow android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:drawableLeft="@drawable/customer_bill"
            android:layout_gravity="center_vertical"
            android:textColor="@color/slideTitleBarBackground"
            android:textSize="24dp"
            android:layout_span="3"
            android:textAlignment="center" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_span="2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="日期"
                android:enabled="false"
                android:textSize="@dimen/customerbill_textsize"
                android:id="@+id/logDate" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="总用水量"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/currentTotalWaterQuantity" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_span="2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用水性质"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/priceTitle" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="人数"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/peoples" />
        </android.support.design.widget.TextInputLayout>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="水价"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/price" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="水量"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/waterQuantity" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="金额"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/currentPay" />
        </android.support.design.widget.TextInputLayout>

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="上次日期"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/lastDate" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="本次日期"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/currentDate" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="转换指针"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/baseValue" />
        </android.support.design.widget.TextInputLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="上次指针"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/lastValue" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="本次指针"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/currentValue" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="串标指针"
                android:textSize="@dimen/customerbill_textsize"
                android:enabled="false"
                android:id="@+id/serialValue" />
        </android.support.design.widget.TextInputLayout>
    </TableRow>
    </TableLayout>
</LinearLayout>
